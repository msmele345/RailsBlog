<div id="post_content">
  <h1 class="title">
    <%= @post.title %>
  </h1>



  <p class="date">
    Submitted <%= time_ago_in_words(@post.created_at) %> ago
    <% if current_user %>
    | <%= link_to "Edit", edit_post_path(@post) %>
    | <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"} %>
    <% end %>
  </p>

  <p class="body">
    <%= @post.body %>
  </p>

  <div id="comments">
     <h2><%= @post.comments.count %> Comments</h2>
     <%= render @post.comments %>
  <% if current_user %>
     <h3>Add a Comment:</h3>
     <%= render "comments/form" %>
  <% else %>
     <p class="session-fail"><strong>Please login before making any comments</strong></p>
 <% end  %>
  </div>
</div>