
<h1>Signup!</h1>

<div class="user-signup">
 <%= form_for :user, url: '/users' do |f| %>

  <p>
    <%= f.label :name %><br>
     <%= f.text_field :name %>
  </p>
  <p>
     <%= f.label :email  %><br>
     <%= f.text_field :email %>
  </p>

  <p>
     <%= f.label :password  %><br>
     <%= f.password_field :password %>
  </p>

  <p>
     <%= f.submit "Submit" %>
  </p>

 <% end %>
</div>
